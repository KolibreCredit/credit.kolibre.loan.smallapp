/* pages/project/record.wxss */
.row {
    height: 55px;
    border-bottom: 1px solid #e9e9e9;
    padding-left: 20px;
    position: relative;
    line-height: 55px;
    font-size: 16px;
    color: #646464;
}
.securityRange {
    font-size: 12px;
    color: #47cabf;
    padding-left: 20px;
    border-bottom: 1px solid #e9e9e9;
    height: 30px;
    line-height: 30px;
}
.viewInput {
    position: absolute;
    right: 0;
    top: 0;
    width: 70%;
    height: 45px;
    padding: 0 5px;
    text-align: right;
}
picker {
    padding-right: 30px;
}

switch {
    float: right;
    margin-left: 5px;
}

input[type=text],input[type=number],input[type=digit]{
    padding: 0 5px;
    border: 0;
    margin-bottom: 0;
    float: right;
    width: 100%;
    text-align: right;
    height: 55px;
}
.jiantou {
    width: 24px;
    height: 24px;
    position: absolute;
    top: 16px;
    right: 10px;
}

.scroll-view_H {
    white-space: nowrap;
}

.scroll-view-item_H {
    display: inline-block;
    width: 120px;
    height: 80px;
    margin-top: 10px;
    margin-right: 20px;
    border-radius: 4px;
    border: 1px solid #c0ccda;
    position: relative;
}

.scroll-view-item_H image {
    width: 100%;
    height: 80px;
    border-radius: 4px;
}

.scroll-view-item_H .delete{
    width: 24px;
    height: 24px;
    position: absolute;
    top: -8px;
    right: -5px;
}

.chooseImage {
    background: rgba(71, 202, 191, 0.10);
    border: 1px dotted #47cabf;
}

.chooseImage image {
    width: 24px;
    height: 24px;
    position: absolute;
    top: 28px;
    left: 48px;
}