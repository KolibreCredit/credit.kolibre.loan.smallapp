/* pages/user/user.wxss */
page {
    background-color: #f8f8f8;
}

.mui-content {
    background: none;
    text-align: center;
}
.photo {
    width: 100px;
    height: 100px;
    border-radius: 100%;
    box-shadow:0 0 6px 0 rgba(0,0,0,0.10);
}
span {
    float: right;
}

.step0 {
    display: block;
    position: relative;
}

.step1 {
    display: block;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background-color: #ffffff;
}

.editor {
    width: 24px;
    height: 24px;
    position: absolute;
    right: 30px;
    top: 40px;
}

picker, .viewInput {
    position: absolute;
    right: 0;
    top: 0;
    width: 70%;
    height: 45px;
    padding: 0 5px;
    text-align: right;
}

input[type=text] {
    padding: 0 5px;
    border: 0;
    margin-bottom: 0;
    float: right;
    width: 100%;
    text-align: right;
    height: 45px;
}

.jiantou {
    width: 24px;
    height: 24px;
    position: absolute;
    top: 14px;
    right: 0;
}
