/* pages/customer/risk.wxss */
page {
  background-color: #f8f8f8;
}
.head {
  text-align: center;
  height: 140px;
  position: relative;
}
.logo {
  width: 100%;
  top:10px;
  position: absolute;
  text-align: center;
}
.logo image {
  width: 200px;
  height: 60px;
}
.fengxian {
  width: 100%;
  height: 140px;
}
.anquan {
  width: 100%;
  height: 140px;
}

.add {
  position: absolute;
  top: 80px;
  width: 100%;
  text-align: center;
}
.add image {
  width: 200px;
  height: 60px;
}

.item {
  background-color: #ffffff;
  padding: 16px 20px;
  margin-top: 10px;
}
.riskGrade {
  margin-top: 10px;
}
.riskGrade .itemRiskGrade{
  width:19%;
  height:32px;
  float: left;
  margin-right: 1%;
  position: relative;
}
.itemRiskGrade view {
  font-size: 12px;
  border-radius: 100px;
  height: 24px;
  line-height: 24px;
  width: 100%;
  text-align: center;
}
.itemRiskGrade image {
  width: 8px;
  height: 4px;
  position: absolute;
  left: 50%;
  margin-left: -4px;
  bottom: 0;
}
.scroll-view_H {
  white-space: nowrap;
}
.scroll-view-item_H {
  width: 120px;
  height: 80px;
  margin-right: 10px;
}