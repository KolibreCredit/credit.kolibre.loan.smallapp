/* pages/project/detail.wxss */

.icon {
    position: absolute;
    left: 22px;
    top: 30px;
}

.villageName {
    position: absolute;
    left: 54px;
    top: 30px;
    font-size: 18px;
    color: #ffffff;
}
.roomNumber {
    position: absolute;
    left: 54px;
    top: 60px;
    font-size: 12px;
    color: #ffffff;
    display: inline;
    height: 16px;
    line-height: 16px;
}
.security{
    background:#ffffff;
    border-radius:100px;
    width:40px;
    height:16px;
    font-size:10px;
    color:#60b206;
    display:inline-block;
    text-align:center;
    margin-left: 10px;
}
.verifycheck{
    background:#ffffff;
    border-radius:100px;
    width:40px;
    height:16px;
    font-size:10px;
    color:#ff6260;
    display:inline-block;
    text-align:center;
    margin-left: 10px;
}
.roomState {
    position: absolute;
    top: 105px;
    font-size: 14px;
    color: #FFFFFF;
    height: 20px;
    left: 50%;
    margin-left: -14px;
    display: inline-block;
}

.records {
    width: 100%;
    height: 40px;
    padding: 0 20px;
}

.records view {
    width: 30%;
    float: left;
    border: 1px solid #e9e9e9;
    border-radius: 100px;
    height: 35px;
    line-height: 35px;
    text-align: center;
    margin-right: 3%;
    font-size: 16px;
    color: #646464;
}

.records .active {
    background: #47cabf;
    color: #ffffff;
}

.roomRecords {
    margin-top: 15px;
}

.roomRecords .item {
    padding: 0 20px;
    border-bottom: 1px solid #e9e9e9;
}

.item .account {
    height: 60px;
    line-height: 60px;
    font-size: 16px;
    color: #646464;
    padding-left:40px;
    position: relative;
}
.accountPhotoUrl {
    width: 34px;
    height: 34px;
    border-radius: 100%;
    position: absolute;
    top: 10px;
    left: 0;
    box-shadow: 0 0 6px 0 rgba(0, 0, 0, 0.10);
}

.account span {
    font-size: 14px;
    color: #999999;
    float: right;
}

.slide-image {
    width: 100%;
    height: 100%;
}

.item .picture {
    position: relative;
}

.picture text {
    font-size: 14px;
    color: #ffffff;
}

.picture .hint {
    position: absolute;
    width: 100%;
    text-align: center;
    bottom: 10px;
    z-index: 2;
}

.item .describe {
    font-size: 14px;
    color: #646464;
    line-height: 20px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top: 15px;
    position: relative;
    padding-right: 20px;
    padding-bottom: 15px;
}

.item .more {
    white-space: inherit;
}

.describe image {
    width: 24px;
    height: 24px;
    position: absolute;
    right: 0;
    top: 0;
}

.roomRecords .nodata {
    padding-top: 35px;
    height: 140px;
    text-align: center;
}

.nodata view {
    margin-top: 10px;
    font-size: 16px;
    color: #999999;
    text-align: center;
}

.addView {
    background: #47cabf;
    border: 2px solid #ffffff;
    box-shadow: 0 0 5px 0 rgba(0, 0, 0, 0.10);
    width: 56px;
    height: 56px;
    border-radius: 100%;
    display: inline-block;
    position: fixed;
    left: 50%;
    margin-left: -28px;
    bottom: 20px;
    z-index: 3;
}

.addView image {
    width: 16px;
    height: 16px;
    position: absolute;
    left: 18px;
    top: 18px;
}

.swiperDoorLockDevices {
    height: 100px;
    width: 100%;
}

.doorLockDevicesView {
    height: 100px;
    width: 100%;
    background: rgba(71, 202, 191, 0.10);
    border: 1px dotted #47cabf;
    padding: 0 15px;
    position: relative;
}

.doorLockDevicesView view {
    font-size: 12px;
    color: #646464;
    line-height: 12px;
    margin-top: 8px;
}

.doorLockDevicesView .device {
    margin-top: 15px;
    font-size: 14px;
    color: #758c99;
}

.addDoorLockDevices {
    font-size: 16px;
    color: #758c99;
    width: 100%;
    text-align: center;
}