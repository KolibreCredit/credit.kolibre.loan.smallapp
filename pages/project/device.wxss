/* pages/project/device.wxss */

.row {
    height: 55px;
    border-bottom: 1px solid #e9e9e9;
    margin-left: 20px;
    position: relative;
    line-height: 55px;
    font-size: 16px;
    color: #646464;
}

 .viewInput {
    position: absolute;
    right: 0;
    top: 0;
    width: 70%;
    height: 45px;
    padding: 0 5px;
    text-align: right;
}
picker {
    padding-right: 30px;
}

switch {
    float: right;
    margin-left: 5px;
}

input[type=text] {
    padding: 0 5px;
    border: 0;
    margin-bottom: 0;
    float: right;
    width: 100%;
    text-align: right;
    height: 55px;
}
.jiantou {
    width: 24px;
    height: 24px;
    position: absolute;
    top: 16px;
    right: 10px;
}