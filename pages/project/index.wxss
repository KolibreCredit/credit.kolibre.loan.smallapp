/* pages/project/index.wxss */
.head {
    width: 100%;
    height: 100px;
    position: relative;
}

.logo {
    position: absolute;
    width: 240px;
    top: 40px;
    font-size: 18px;
    color: #ffffff;
    padding-left: 20px;
}

.qiehuan {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 15px 0 0 15px;
    width: 82px;
    height: 30px;
    position: absolute;
    top: 35px;
    line-height: 30px;
    right: 0;
    text-align: center;
    font-size: 14px;
    color: #ffffff;
}

.villageAparmentItem {

}

.aparment {
    position: absolute;
    width: 24px;
    height: 24px;
    top: 24px;
    left: 20px;
}

.villageName {
    position: absolute;
    width: auto;
    height: 24px;
    top: 24px;
    left: 64px;
    font-size: 18px;
    color: #212121;
}

.apartmentCount {
    position: absolute;
    width: auto;
    height: 24px;
    top: 52px;
    left: 64px;
    font-size: 14px;
    color: #7b7b7b;
}

.jiantou {
    position: absolute;
    top: 35px;
    right: 20px;
    width: auto;
    font-size: 14px;
    color: #7b7b7b;
    height: 24px;
    line-height: 24px;
}

.subItem {
    border-bottom: 1px solid #e6eaee;
    height: 50px;
    line-height: 50px;
    font-size: 16px;
    color: #7b7b7b;
    position: relative;
}

.roomCount {
    position: absolute;
    top: 12px;
    right: 0;
    background-color: rgba(71, 202, 191, 0.1);
    height: 26px;
    line-height: 26px;
    border-radius: 100px;
    font-size: 12px;
    color: #47cabf;
    text-align: center;
    padding: 0 10px;
}
.choose {
    left: 0;
    bottom: 0;
    right: 0;
    top: 0;
    position: fixed;
    background-color: rgba(0, 0, 0, 0.4);
}
.tenancy {
    height: 430px;
    width: 100%;
    background: #ffffff;
    position: absolute;
    bottom: 0;
}
.section__title {
    font-size: 16px;
    color: #666666;
    height: 50px;
    line-height: 50px;
    position: relative;
    padding-left: 20px;
}
.section__title image {
    width: 24px;
    height: 24px;
    top: 13px;
    right: 20px;
    position: absolute;
}
.scroll-view-item {
    border-top: 1px solid #f1f1f1;
    height: 50px;
    line-height: 50px;
    font-size: 16px;
    color: #646464;
    position: relative;
    padding-left: 20px;
}
.scroll-view-item image {
    position: absolute;
    width: 24px;
    height: 24px;
    right: 20px;
    top: 13px;
}